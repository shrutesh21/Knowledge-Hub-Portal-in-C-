<div class="container mt-5">
    <h1 class="mb-4">Add Category</h1> 
    <form asp-action="Save" asp-controller="Catagories" method="post">
        @Html.ValidationSummary()
        <div class="mb-3">
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter category name" required>    
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="categoryDescription" class="form-label">Category Description</label>
            <textarea class="form-control" id="Description" asp-for="Description" rows="4" placeholder="Enter category description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
