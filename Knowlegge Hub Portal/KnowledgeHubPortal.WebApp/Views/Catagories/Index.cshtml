@model List<KnowledgeHubPortal.Domain.Entities.Catagory>

@*<h1> Catagory Count : @Model.Count</h1>*@

<a class="btn btn-primary" asp-action="Add" asp-controller="Catagories">Add New Catagory</a>
<table class="table"> @* class="table" is bootstrap*@
	<thead>
		<tr>
			<th>Catagory ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var catagory in Model)
		{
			<tr>
				<td>@catagory.CatagoryId</td>
				<td>@catagory.Name</td>
				<td>@catagory.Description</td>
				<td><a asp-action="Edit" asp-controller="Catagories" asp-route-id="@catagory.CatagoryId" class="btn btn-primary">Edit</a></td>
				<td><a asp-action="Delete" asp-controller="Catagories" asp-route-id="@catagory.CatagoryId" class="btn btn-danger" onclick="return confirmDelete()">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
<script>
	function confirmDelete() {
		return confirm("Are you sure you want to delete this item?");
	}
</script>