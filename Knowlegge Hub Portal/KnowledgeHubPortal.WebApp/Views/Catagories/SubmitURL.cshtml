@model KnowledgeHubPortal.Domain.Entities.Catagory

<div class="container mt-5">
    <h1 class="mb-4">Submit URL</h1>
    <form asp-action="SubmitURL" asp-controller="Catagories" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Name" id="title" placeholder="Enter title" required>
        </div>
        <div class="mb-3">
            <label for="url" class="form-label">URL</label>
            <input type="url" class="form-control" asp-for="Description" id="url" placeholder="Enter URL" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="4" placeholder="Enter description" required></textarea>
        </div>
        <div class="mb-3">
            <label for="catagory" class="form-label">Catagory</label>
            <select class="form-select" id="catagory" required>
                <option value="" selected>Select a catagory</option>
                <option value="Technology">Technology</option>
                <option value="Science">Science</option>
                <option value="Health">Health</option>
                <option value="Education">Education</option>
                <option value="Entertainment">Entertainment</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>